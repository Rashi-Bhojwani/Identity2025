<script>
document.getElementById("jobFinderForm").addEventListener("submit", async (e) => {
  e.preventDefault();
  const city = document.getElementById("city").value;
  const role = document.getElementById("role").value;
  const resultBox = document.getElementById("jobsResult");

  resultBox.innerHTML = "<p class='text-center text-gray-700 col-span-full'>Loading jobs...</p>";

  try {
    const res = await fetch("/cityjobs", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ city, role })
    });
    const data = await res.json();

    if (!data.success || !data.jobs.length) {
      resultBox.innerHTML = `<p class='text-center text-gray-700 col-span-full'>No jobs found.</p>`;
      return;
    }

    const jobsHTML = data.jobs.map(job => `
      <div class="glass p-5 rounded-2xl shadow hover:shadow-xl transition">
        <h3 class="text-xl font-bold text-gray-900">${job.title}</h3>
        <p class="text-gray-700 mt-1">City: ${job.city}</p>
        <a href="${job.link}" target="_blank" class="text-gradient font-semibold mt-2 inline-block hover:underline">View Job</a>
      </div>
    `).join('');

    resultBox.innerHTML = jobsHTML;

  } catch(err) {
    console.error(err);
    resultBox.innerHTML = `<p class='text-center text-red-500 col-span-full'>Server error</p>`;
  }
});
</script>

