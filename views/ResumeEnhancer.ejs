    /* GLOBAL STYLES */
    body {
      background: linear-gradient(135deg, #e3ebff, #f6eaff);
      font-family: "Inter", sans-serif;
    }

    .text-gradient {
      background: linear-gradient(135deg, hsl(210 100% 50%), hsl(270 60% 55%));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .bg-gradient-main {
      background: linear-gradient(135deg, hsl(210 100% 50%), hsl(270 60% 55%));
    }

    .glass {
      background: rgba(255, 255, 255, 0.55);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .glass:hover {
      box-shadow: 0 12px 40px rgba(100, 120, 255, 0.25);
    }

    /* ANIMATIONS */
    @keyframes gradientMove {
      0% { background-position: 0% 50%; }
      100% { background-position: 100% 50%; }
    }
    .animate-gradientMove {
      background-size: 200% 200%;
      animation: gradientMove 4s infinite alternate ease-in-out;
    }

    @keyframes slideFade {
      0% { opacity: 0; transform: translateX(-30px); }
      100% { opacity: 1; transform: translateX(0); }
    }
    .animate-slideFade { animation: slideFade 1s ease forwards; }

    @keyframes fadeUp {
      0% { opacity: 0; transform: translateY(20px); }
      100% { opacity: 1; transform: translateY(0); }
    }
    .animate-fadeUp { animation: fadeUp 1s ease forwards; }

    /* Delay utilities */
    .delay-200 { animation-delay: 0.2s; }
    .delay-300 { animation-delay: 0.3s; }
    .delay-500 { animation-delay: 0.5s; }
    .delay-700 { animation-delay: 0.7s; }
    .delay-900 { animation-delay: 0.9s; }
  </style>
</head>

