<script>
  async function analyzeResume() {
    const file = document.getElementById("resumeFile").files[0];
    const btn = document.getElementById("analyzeBtn");
    const processingText = document.getElementById("processingText");
    const resultBox = document.getElementById("resultBox");
    const resultContainer = document.getElementById("resultContainer");

    if (!file) {
      alert("Please upload a resume first!");
      return;
    }

    // Show processing text
    processingText.classList.remove("hidden");
    resultContainer.style.display = "none"; // hide result until processing finishes
    resultBox.innerHTML = ""; // clear previous result
    btn.disabled = true;

    const formData = new FormData();
    formData.append("resume", file);

    try {
      const response = await fetch("/score", { method: "POST", body: formData });
      const data = await response.json();

      let html = "";
      if (!data || Object.keys(data).length === 0) {
        html = "<p class='text-center text-gray-700'>No response from AI.</p>";
      } else {
        html = `<p>ATS Score: <span class="font-bold text-gradient">${data.ATSScore ?? 0}</span></p>`;

        if (data.WordSuggestions?.length > 0) {
          html += `<p class="mt-4 font-semibold">Word Suggestions:</p>`;
          html += `<table>`;
          html += `<tr><th>Current</th><th>Suggested</th></tr>`;
          data.WordSuggestions.forEach(ws => {
            html += `<tr>
              <td>${ws.Current}</td>
              <td class="font-semibold text-gradient">${ws.Suggested}</td>
            </tr>`;
          });
          html += `</table>`;
        }
      }

      resultBox.innerHTML = html;
      resultContainer.style.display = "block"; // show result after processing

    } catch (err) {
      console.error("Error fetching AI data:", err);
      resultBox.innerHTML = "<p class='text-center text-red-500'>Server error.</p>";
      resultContainer.style.display = "block"; // still show box on error
    } finally {
      btn.disabled = false;
      processingText.classList.add("hidden");
    }
  }
</script>

